<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.trevana.fragments.HomeFragment"
        android:label="Home"/>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.trevana.fragments.SearchFragment"
        android:label="Search"/>

    <fragment
        android:id="@+id/nav_create_post"
        android:name="com.example.trevana.fragments.CreatePostFragment"
        android:label="Create Post"/>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.trevana.fragments.ProfileFragment"
        android:label="Profile"/>

    <fragment
        android:id="@+id/nav_post_detail"
        android:name="com.example.trevana.fragments.PostDetailFragment"
        android:label="Post Details">
        <argument
            android:name="postId"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.yourpackage.SearchFragment"
        android:label="Search" />

</navigation>