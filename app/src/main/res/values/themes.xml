<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Trevana" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/surface</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/ripple_orange</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Status and navigation bars -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:navigationBarColor" tools:targetApi="o">@color/primary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_primary</item>

        <!-- Text input styles -->
        <item name="textInputStyle">@style/TextInputStyle</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <!-- Text appearances -->
        <item name="textAppearanceBody1">@style/TextAppearance.Trevana.Body</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Trevana.Caption</item>
    </style>

    <!-- Text Input Style -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent</item>
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="errorTextColor">@color/error_red</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="rippleColor">@color/ripple_orange</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.Trevana.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Trevana.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>